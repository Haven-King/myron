{
    "multipart": [
        {
            "apply": { "model": "minecraft:block/iron_bars_post"}
        },
        {
            "when": { "facing": "north"},
            "apply": { "model": "myron:block/cone.obj" }
        },
        {
            "when": { "facing": "east"},
            "apply": { "model": "myron:block/cone.obj", "y": 90, "uvlock": true }
        },
        {
            "when": { "facing": "south"},
            "apply": { "model": "myron:block/cone.obj", "y": 180, "uvlock": true }
        },
        {
            "when": { "facing": "west"},
            "apply": { "model": "myron:block/cone.obj", "y": 270, "uvlock": true }
        }
    ]
}